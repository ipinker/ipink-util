{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitThis": false,
        "skipLibCheck": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@dcloudio/types",
            "vite/client",
            "mini-types/types",
            "miniprogram-api-typings",
            "./src/global.ts"
        ]
    },
    "include": [
        "**.d.ts",
        "./**.ts",
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
